  </div>
  <div class="field">
    <%= f.label :min_time_diff %><br />
    <%= f.number_field :min_time_diff %>
  </div>
  <div class="field">
    <%= f.label :break_time %><br />
    <%= f.number_field :break_time %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
