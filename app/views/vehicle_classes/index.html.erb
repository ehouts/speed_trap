<h1>Listing Vehicle Classes for <%= @vehicle_classes.first.event.name if @vehicle_classes.length > 0 %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Max speed</th>
    <th>Entrants</th>
    <% if current_user != nil and current_user.authorized?(:data_entry) %>
      <th></th>
      <th></th>
      <th></th>
    <% end %>
  </tr>

<% @vehicle_classes.each do |vehicle_class| %>
  <tr>
    <td><%= link_to vehicle_class.name, vehicle_class %></td>
    <td><%= vehicle_class.max_speed %></td>
    <td><%= vehicle_class.entrants.count %></td>
    <% if current_user != nil and current_user.authorized?(:data_entry) %>
      <td><%= link_to 'Show', vehicle_class %></td>
      <td><%= link_to 'Edit', edit_vehicle_class_path(vehicle_class) %></td>
      <td><%= link_to 'Destroy', vehicle_class, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if current_user != nil and current_user.authorized?(:data_entry) %>
  <%= link_to 'New Vehicle class', new_vehicle_class_path %>
<% end %>

